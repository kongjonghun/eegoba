<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="lgcns.eegoba.api.book.mapper.BookMapper">

    <select id="getAllBooks" resultType="BookVo">
        SELECT * FROM books
    </select>

    <select id="getBookById" resultType="BookVo">
        SELECT * FROM books WHERE book_id = #{bookId}
    </select>

    <select id="getBookReviews" resultType="String">
        SELECT review FROM book_reviews WHERE book_id = #{bookId}
    </select>

</mapper>